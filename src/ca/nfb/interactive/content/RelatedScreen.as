package ca.nfb.interactive.content {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;
		public class RelatedScreen extends Sprite {		private static const PADDING:int = 100;				private var content:MovieClip;				private var btnClose:ButtonClose;				public function RelatedScreen() {			super();			content = new RelatedScreenContent();			addChild(content);			content.x = PADDING * .5;			content.y = PADDING * .5;						btnClose = new ButtonClose();			addChild(btnClose);			btnClose.x = 892;			btnClose.y = 12;			btnClose.addEventListener(MouseEvent.CLICK, closeHandler, false, 0, true);		}				public function setSize(w:Number, h:Number):void  {			content.width = w - PADDING;			content.height = h - PADDING;		}				private function closeHandler(e:MouseEvent):void {			dispatchEvent(new Event(Event.CLOSE));		}				public function cleanUp():void {			btnClose.cleanUp();			btnClose.removeEventListener(MouseEvent.CLICK, closeHandler);		}	}}